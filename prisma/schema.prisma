// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  events       Event[]
  birthData  BirthData?
  charts     Chart[]

}

model Event {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  title       String
  description String?
  theme       String?   // e.g. "finance", "health", etc.
  happenedAt  DateTime

  createdAt   DateTime @default(now())
}

model BirthData {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique

  date      DateTime
  place     String
  timezone  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  charts    Chart[]
}

model Chart {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  birthData   BirthData @relation(fields: [birthDataId], references: [id])
  birthDataId String

  type        String    // e.g. "natal", "solar_return", etc.
  // Later you can add JSON fields to store positions, houses, etc.

  createdAt   DateTime  @default(now())
}

